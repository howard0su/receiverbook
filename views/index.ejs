<h1>Receiver list</h1>
<ul class="list-group list-group-flush receiver-list mt-5">
    <% receivers.forEach((receiver) => { %>
        <li class="list-group-item">
            <div class="receiver-image">
                <% if (receiver.avatarUrl) { %>
                    <img alt="<%= receiver.label %> avatar" src="<%= receiver.avatarUrl %>">
                <% } %>
            </div>
            <div class="receiver-details">
                <h5><%= receiver.label %></h5>
                <% if (receiver.receivers) { %>
                    <div class="row">
                        <% receiver.receivers.forEach(r => { %>
                            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                                <div><a href="<%= r.url %>" target="_blank"><i class="mdi mdi-open-in-new"></i> <%= r.label %></a></div>
                                <div><%= r.type %> <%= r.version %></div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div><a href="<%= receiver.url %>" target="_blank"><i class="mdi mdi-open-in-new"></i> <%= receiver.url %></a></div>
                    <div><%= receiver.type %> <%= receiver.version %></div>
                <% } %>
            </div>
            <div class="actions">
                <% if (typeof(session) !== 'undefined') { %>
                    <a class="btn btn-sm btn-secondary" href="/my/receivers/<%= receiver._id %>/claim">Claim...</a>
                <% } %>
            </div>
        </li>
    <% }); %>
</ul>
