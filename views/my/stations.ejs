<h1>My Stations</h1>
<table class="table">
    <% if (stations.length) { %>
        <tr>
            <th>Name</th>
            <th>Number of receivers</th>
        </tr>
        <% stations.forEach((station) => { %>
            <tr>
                <td><a href="/my/stations/<%= station.id %>"><%= station.label ? station.label : 'Unnamed station' %></a></td>
                <td><%= station.receivers.length %></td>
            </tr>
        <% }); %>
    <% } else { %>
        <tr><td>No stations found</td></tr>
    <% } %>
</table>
<div class="actions">
    <a class="btn btn-primary" href="/my/stations/new">Add a new station</a>
</div>
<%- contentFor('title') %>
My stations